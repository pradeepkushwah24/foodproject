
<html>

<head>
    
    <link rel="stylesheet" href="/stylesheets/display.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <div style="display:flex;align-items: center;">

                    <img src="/images/logo.png" width="80">
                    <div class="headingstyle">Food List</div>
                </div>

                <div style="margin-left: auto;">
                    <a href="/food/food_interface"><img src="/images/add.png" class="addpic">
                    </a>
                </div>
            </div>

            <table class="table">



                <tr>
                    <th>Sn</th>
                    <th>Food Id</th>
                    <th>category</th>
                    <th>Food Name</th>
                    <th>Ingredients</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Picture</th>
                    <th>Edit</th>
                </tr>
                <% data.map((item,i)=>{ %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= item.foodid %>
                        </td>
                        <td>
                            <%=item.categoryname %><br>
                                <%=item.subcategoryname %>
                        </td>
                        <td>
                            <%= item.foodname %>(<%=item.foodtype %>)
                          
                            
                        </td>
                        <td>
                            <%= item.indgredients %>
                        </td>
                        <td>
                            <%= item.description %>
                        </td>
                        <td>
                            <s>
                                <%= item.price %>
                            </s><br>
                            <%=item.offerprice %>
                        </td>
                        <td>
                            <%= item.status %>
                        </td>
                        <td><a href="/food/show_picture?foodid=<%=item.foodid%>&foodname=<%=item.foodname %>&foodpicture=<%=item.foodpicture%>"> <img class="pic" src="/images/<%= item.foodpicture %>"></a></td>
                        <td><a href="/food/show_food?foodid=<%=item.foodid%>"><button type="button"
                                    class="btn btn-warning">Update</button></a></td>
                    </tr>
                    <% }) %>



            </table>
        </div>
    </div>
</body>

</html>